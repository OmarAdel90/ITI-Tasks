@model MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-plus"></i> Create New Account
                    </h3>
                </div>
                <div class="card-body">
                    @* Display validation summary for general errors *@
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            @foreach (var error in ViewData.ModelState[""].Errors)
                            {
                                <div>@error.ErrorMessage</div>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3">Account Information</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">Username</label>
                                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="RoleCode" class="form-label">Role Code</label>
                                    <input asp-for="RoleCode" class="form-control" id="roleCodeInput" placeholder="111, 222, or 333" />
                                    <small class="form-text text-muted">
                                        111 = Student, 222 = Instructor, 333 = HR
                                    </small>
                                    <span asp-validation-for="RoleCode" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6" id="additionalFields">
                                <h5 class="mb-3">Additional Information</h5>
                                <small class="text-muted mb-3 d-block" id="fieldsNote">(Required for Student/Instructor registration)</small>
                                
                                <div class="mb-3" id="nameField">
                                    <label asp-for="Name" class="form-label">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3" id="addressField">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3" id="departmentField">
                                    <label asp-for="DepartmentId" class="form-label">Department</label>
                                    <select asp-for="DepartmentId" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                                        <option value="">Select Department</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3" id="salaryField" style="display: none;">
                                    <label asp-for="Salary" class="form-label">Salary</label>
                                    <input asp-for="Salary" type="number" class="form-control" placeholder="Enter salary (1000-100000)" min="1000" max="100000" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                    <small class="form-text text-muted">Required for Instructor (1,000 - 100,000)</small>
                                </div>

                                <div id="hrMessage" style="display: none;" class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> HR registration only requires username and password.
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Register
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleCodeInput = document.getElementById('roleCodeInput');
            const nameField = document.getElementById('nameField');
            const addressField = document.getElementById('addressField');
            const departmentField = document.getElementById('departmentField');
            const salaryField = document.getElementById('salaryField');
            const fieldsNote = document.getElementById('fieldsNote');
            const hrMessage = document.getElementById('hrMessage');
            
            function toggleFields() {
                const roleCode = roleCodeInput.value.trim();
                const isStudent = roleCode === '111';
                const isInstructor = roleCode === '222';
                const isHR = roleCode === '333';
                
                if (isHR) {
                    // Hide all additional fields for HR
                    nameField.style.display = 'none';
                    addressField.style.display = 'none';
                    departmentField.style.display = 'none';
                    salaryField.style.display = 'none';
                    fieldsNote.style.display = 'none';
                    hrMessage.style.display = 'block';
                } else if (isStudent || isInstructor) {
                    // Show relevant fields for Student/Instructor
                    nameField.style.display = 'block';
                    addressField.style.display = 'block';
                    departmentField.style.display = 'block';
                    salaryField.style.display = isInstructor ? 'block' : 'none';
                    fieldsNote.style.display = 'block';
                    hrMessage.style.display = 'none';
                    
                    if (isStudent) {
                        fieldsNote.textContent = '(Required for Student registration)';
                    } else if (isInstructor) {
                        fieldsNote.textContent = '(Required for Instructor registration)';
                    }
                } else {
                    // Default state - show fields but mark as optional
                    nameField.style.display = 'block';
                    addressField.style.display = 'block';
                    departmentField.style.display = 'block';
                    salaryField.style.display = 'none';
                    fieldsNote.style.display = 'block';
                    hrMessage.style.display = 'none';
                    fieldsNote.textContent = '(Required for Student/Instructor registration)';
                }
            }
            
            // Initial toggle
            toggleFields();
            
            // Toggle on role code change
            roleCodeInput.addEventListener('input', toggleFields);
            roleCodeInput.addEventListener('change', toggleFields);
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 1rem 1.5rem;
    }
    
    .form-control, .form-select {
        border-radius: 5px;
        padding: 0.75rem;
    }
    
    .btn {
        border-radius: 5px;
        padding: 0.75rem;
        font-weight: 500;
    }
    
    h5 {
        color: #495057;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 0.5rem;
    }

    .alert {
        border-radius: 8px;
    }
</style>