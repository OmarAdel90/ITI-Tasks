@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> 403 - Access Denied
                    </h2>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-x" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>
                    
                    <h3 class="mb-3">You don't have permission to access this resource</h3>
                    
                    <p class="text-muted mb-4">
                        Sorry, the page you're trying to access requires specific permissions that your account doesn't have.
                    </p>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle"></i> 
                        If you believe this is an error, please contact your system administrator.
                    </div>
                    
                    <div class="d-flex gap-2 justify-content-center mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Go to Home Page
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>