@model List<MVC.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            @if (User.IsInRole("Student"))
            {
                <text>All Courses</text>
            }
            else if (User.IsInRole("Instructor"))
            {
                <text>My Teaching Courses</text>
            }
            else
            {
                <text>Courses</text>
            }
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create Course
            </a>
        }
    </div>

    <!-- Role-based information -->
    @if (User.IsInRole("Instructor"))
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You are viewing courses you teach.
        </div>
    }

    <!-- Search Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" 
                               placeholder="Search courses by name..." 
                               value="@ViewBag.CurrentFilter" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Clear Search
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Degree</th>
                        <th>Minimum Degree</th>
                        <th>Hours</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Id</td>
                            <td>@course.Name</td>
                            <td>@course.Degree</td>
                            <td>@course.MinimumDegree</td>
                            <td>@course.Hours</td>
                            <td>@course.Department?.Name</td>
                            <td>
                                <!-- Details Link - Available to all authorized roles -->
                                <a asp-action="Details" asp-route-id="@course.Id" 
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                
                                <!-- Edit Link - Only for Admin -->
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@course.Id" 
                                       class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                
                                    <!-- Delete Form - Only for Admin -->
                                    <form asp-action="Delete" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to delete this course?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Search Results Info -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
        {
            <div class="mt-3 text-muted">
                <small>Showing @Model.Count course(s) matching "@ViewBag.CurrentFilter"</small>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
            {
                <text>No courses found matching "@ViewBag.CurrentFilter"</text>
            }
            else
            {
                if (User.IsInRole("Student"))
                {
                    <text>You are not enrolled in any courses yet.</text>
                }
                else if (User.IsInRole("Instructor"))
                {
                    <text>You are not assigned to teach any courses.</text>
                }
                else
                {
                    <text>No courses found.</text>
                }
            }
        </div>
    }
</div>

<style>
    .btn-sm {
        margin-right: 5px;
    }
    .table th {
        background-color: #343a40;
        color: white;
    }
    .input-group {
        max-width: 500px;
    }
    form {
        display: inline;
    }
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
</style>