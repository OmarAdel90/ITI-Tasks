@model List<MVC.Models.CourseStudents>

@{
    ViewData["Title"] = "Course Enrollments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Enrollments</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Enrollment
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Degree</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.Id</td>
                        <td>@enrollment.Student?.Name</td>
                        <td>@enrollment.Course?.Name</td>
                        <td>@enrollment.Degree</td>
                        <td>
                            @if (enrollment.Degree >= enrollment.Course?.MinimumDegree)
                            {
                                <span class="badge bg-success">Passed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Failed</span>
                            }
                        </td>
                        <td>
                            <!-- Details Link -->
                            <a asp-action="Details" asp-route-id="@enrollment.Id" 
                               class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            
                            <!-- Edit Link -->
                            <a asp-action="Edit" asp-route-id="@enrollment.Id" 
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            
                            <!-- Delete Form -->
                            <form asp-action="Delete" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@enrollment.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No course enrollments found.
        </div>
    }
</div>

<style>
    .btn-sm {
        margin-right: 5px;
    }
    .table th {
        background-color: #343a40;
        color: white;
    }
    form {
        display: inline;
    }
    .badge {
        font-size: 0.8em;
    }
</style>