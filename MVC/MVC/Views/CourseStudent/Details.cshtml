@model MVC.Models.CourseStudents

@{
    ViewData["Title"] = "Enrollment Details";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-info-circle"></i> Enrollment Details
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Course Enrollment Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Enrollment ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Student:</dt>
                        <dd class="col-sm-8">
                            @Model.Student?.Name
                            @if (User.IsInRole("Student") && Model.Student?.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                            {
                                <span class="badge bg-primary ms-2">You</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Student Department:</dt>
                        <dd class="col-sm-8">@Model.Student?.Department?.Name</dd>

                        <dt class="col-sm-4">Course:</dt>
                        <dd class="col-sm-8">@Model.Course?.Name</dd>

                        <dt class="col-sm-4">Course Department:</dt>
                        <dd class="col-sm-8">@Model.Course?.Department?.Name</dd>

                        <dt class="col-sm-4">Grade:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Degree</strong> / 100
                        </dd>

                        <dt class="col-sm-4">Minimum Required:</dt>
                        <dd class="col-sm-8">@Model.Course?.MinimumDegree</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Degree >= Model.Course?.MinimumDegree)
                            {
                                <span class="badge bg-success">Passed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Failed</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <!-- Action buttons with authorization -->
            <div class="mt-4">
                @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Enrollment
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Are you sure you want to delete this enrollment?')">
                            <i class="bi bi-trash"></i> Delete Enrollment
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        font-weight: 600;
    }
    
    dt {
        font-weight: 600;
        color: #555;
    }
    
    .badge {
        font-size: 0.9em;
    }
    
    form.d-inline {
        display: inline;
    }
</style>