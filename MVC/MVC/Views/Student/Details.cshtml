@model MVC.Models.Student

@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Student Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person"></i> @Model.Name
                @if (User.IsInRole("Student") && Model.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <span class="badge bg-light text-dark ms-2">Your Profile</span>
                }
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Student ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Grade:</dt>
                        <dd class="col-sm-8">@Model.Grade</dd>

                        <dt class="col-sm-4">Department:</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>

                        <dt class="col-sm-4">Course Enrollments:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.CourseStudents?.Count</span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="text-center">
                            <img src="@Model.Image" class="img-fluid rounded" alt="Student Image" 
                                 style="max-height: 200px;" />
                            <p class="text-muted mt-2">Student Photo</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-person" style="font-size: 100px;"></i>
                            <p>No image available</p>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Action buttons with authorization -->
            <div class="mt-4">
                @if (User.IsInRole("Admin") || User.IsInRole("HR") || 
                    (User.IsInRole("Student") && Model.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Student
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Are you sure you want to delete this student? This will also remove all course enrollments.')">
                            <i class="bi bi-trash"></i> Delete Student
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        font-weight: 600;
    }
    
    dt {
        font-weight: 600;
        color: #555;
    }
    
    form.d-inline {
        display: inline;
    }
    
    .badge {
        font-size: 0.8em;
    }
</style>