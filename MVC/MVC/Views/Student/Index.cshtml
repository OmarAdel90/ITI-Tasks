@model List<MVC.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Students</h2>
        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Student
            </a>
        }
    </div>

    <!-- Role-based information -->
    @if (User.IsInRole("Student"))
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You are viewing your student profile.
        </div>
    }

    <!-- Search Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" 
                               placeholder="Search by student name, address, or department..." 
                               value="@ViewBag.CurrentFilter" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Clear Search
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Grade</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>
                                @student.Name
                                @if (User.IsInRole("Student") && student.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <span class="badge bg-primary ms-1">You</span>
                                }
                            </td>
                            <td>@student.Address</td>
                            <td>@student.Grade</td>
                            <td>@student.Department?.Name</td>
                            <td>
                                <!-- Details Link - Available to all authorized roles -->
                                <a asp-action="Details" asp-route-id="@student.Id" 
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                
                                <!-- Edit Link - Admin/HR can edit all, Student can only edit themselves -->
                                @if (User.IsInRole("Admin") || User.IsInRole("HR") || 
                                    (User.IsInRole("Student") && student.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                                {
                                    <a asp-action="Edit" asp-route-id="@student.Id" 
                                       class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                }
                                
                                <!-- Delete Form - Admin/HR can delete all, Student can only delete themselves -->
                                @if (User.IsInRole("Admin") || User.IsInRole("HR") || 
                                    (User.IsInRole("Student") && student.Id.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                                {
                                    <form asp-action="Delete" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@student.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to delete this student? This will also remove all course enrollments.')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Search Results Info -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
        {
            <div class="mt-3 text-muted">
                <small>Showing @Model.Count student(s) matching "@ViewBag.CurrentFilter"</small>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
            {
                <text>No students found matching "@ViewBag.CurrentFilter"</text>
            }
            else
            {
                <text>No students found.</text>
            }
        </div>
    }
</div>

<style>
    .btn-sm {
        margin-right: 5px;
    }
    .table th {
        background-color: #343a40;
        color: white;
    }
    form {
        display: inline;
    }
    .input-group {
        max-width: 500px;
    }
    .badge {
        font-size: 0.7em;
    }
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
</style>