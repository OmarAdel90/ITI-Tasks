@model MVC.Models.Instructor

@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit Instructor</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Instructor Name</label>
                    <input asp-for="Name" class="form-control" type="text" required 
                           placeholder="Enter instructor name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Salary" class="control-label">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" required 
                           placeholder="Enter salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" class="form-control" type="text" required 
                           placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Image" class="control-label">Image URL</label>
                    <input asp-for="Image" class="form-control" type="text" 
                           placeholder="Enter image URL (optional)" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="DeptId" class="control-label">Department</label>
                    <select asp-for="DeptId" class="form-control" required
                            asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DeptId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CrsId" class="control-label">Course</label>
                    <select asp-for="CrsId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Courses, "Id", "Name"))">
                        <option value="">-- No Course Selected --</option>
                    </select>
                    <span asp-validation-for="CrsId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}