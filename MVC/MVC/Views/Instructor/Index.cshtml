@model List<MVC.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Instructors</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Instructor
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Course</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instructor in Model)
                {
                    <tr>
                        <td>@instructor.Id</td>
                        <td>@instructor.Name</td>
                        <td>$@instructor.Salary</td>
                        <td>@instructor.Department?.Name</td>
                        <td>@instructor.Course?.Name</td>
                        <td>
                            <!-- Details Link -->
                            <a asp-action="Details" asp-route-id="@instructor.Id" 
                               class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            
                            <!-- Edit Link -->
                            <a asp-action="Edit" asp-route-id="@instructor.Id" 
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            
                            <!-- Delete Form -->
                            <form asp-action="Delete" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@instructor.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No instructors found.
        </div>
    }
</div>

<style>
    .btn-sm {
        margin-right: 5px;
    }
    .table th {
        background-color: #343a40;
        color: white;
    }
    form {
        display: inline;
    }
</style>