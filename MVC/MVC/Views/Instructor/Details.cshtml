@model MVC.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Instructor Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Instructor ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Salary:</dt>
                        <dd class="col-sm-8">$@Model.Salary</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Department:</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>

                        <dt class="col-sm-4">Course:</dt>
                        <dd class="col-sm-8">@Model.Course?.Name</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="text-center">
                            <img src="@Model.Image" class="img-fluid rounded" alt="Instructor Image" 
                                 style="max-height: 200px;" />
                            <p class="text-muted mt-2">Instructor Photo</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-person-badge" style="font-size: 100px;"></i>
                            <p>No image available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        font-weight: 600;
    }
    
    dt {
        font-weight: 600;
        color: #555;
    }
</style>