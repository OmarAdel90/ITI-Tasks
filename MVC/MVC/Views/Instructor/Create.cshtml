@model MVC.Models.Instructor

@{
    ViewData["Title"] = "Create New Instructor";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus"></i> Create New Instructor
                    </h4>
                </div>
                <div class="card-body">
                    @if (!User.IsInRole("Admin") && !User.IsInRole("HR"))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> 
                            You do not have permission to create instructors. Only Administrators and HR can create new instructors.
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    }
                    else
                    {
                        <form asp-action="Create" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Name" class="form-label fw-bold">Instructor Name</label>
                                        <input asp-for="Name" class="form-control" type="text" required 
                                               placeholder="Enter instructor name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="Salary" class="form-label fw-bold">Salary</label>
                                        <input asp-for="Salary" class="form-control" type="number" required 
                                               placeholder="Enter salary" />
                                        <span asp-validation-for="Salary" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="Address" class="form-label fw-bold">Address</label>
                                        <input asp-for="Address" class="form-control" type="text" required 
                                               placeholder="Enter address" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Image" class="form-label fw-bold">Image URL</label>
                                        <input asp-for="Image" class="form-control" type="text" 
                                               placeholder="Enter image URL (optional)" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                        <small class="form-text text-muted">Optional: Provide a URL to instructor's photo</small>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="DeptId" class="form-label fw-bold">Department</label>
                                        <select asp-for="DeptId" class="form-control" required
                                                asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                                            <option value="">-- Select Department --</option>
                                        </select>
                                        <span asp-validation-for="DeptId" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="CrsId" class="form-label fw-bold">Course</label>
                                        <select asp-for="CrsId" class="form-control"
                                                asp-items="@(new SelectList(ViewBag.Courses, "Id", "Name"))">
                                            <option value="">-- No Course Assigned --</option>
                                        </select>
                                        <span asp-validation-for="CrsId" class="text-danger"></span>
                                        <small class="form-text text-muted">Optional: Assign instructor to a course</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Create Instructor
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}