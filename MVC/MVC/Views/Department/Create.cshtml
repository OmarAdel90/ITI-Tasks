@model MVC.Models.Department

@{
    ViewData["Title"] = "Create New Department";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Create New Department
                    </h4>
                </div>
                <div class="card-body">
                    @if (!User.IsInRole("Admin"))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> 
                            You do not have permission to create departments. Only Administrators can create new departments.
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    }
                    else
                    {
                        <form asp-action="Create" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label fw-bold">Department Name</label>
                                <input asp-for="Name" class="form-control" type="text" required 
                                       placeholder="Enter department name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="ManagerName" class="form-label fw-bold">Manager Name</label>
                                <input asp-for="ManagerName" class="form-control" type="text" required 
                                       placeholder="Enter manager's full name" />
                                <span asp-validation-for="ManagerName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Create Department
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}