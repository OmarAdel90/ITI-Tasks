@model MVC.Models.Department

@{
    ViewData["Title"] = "Create New Department";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Create New Department</h2>

            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Department Name</label>
                    <input asp-for="Name" class="form-control" type="text" required 
                           placeholder="Enter department name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ManagerName" class="control-label">Manager Name</label>
                    <input asp-for="ManagerName" class="form-control" type="text" required 
                           placeholder="Enter manager's full name" />
                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Create Department" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}